@using ChatApp.Web.ViewModels
@using System.Security.Claims
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@model AdminChatRoomViewModel
@{
    var schoolIdClaim = HttpContextAccessor.HttpContext.User.FindFirst("SchoolId");
    var isSchoolAdmin = schoolIdClaim != null;
}

<form asp-action="CreateCurriculumRoom" method="post" class="space-y-6">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm bg-red-100 p-3 rounded-lg text-center"></div>

    <div>
        <h3 class="text-2xl font-bold text-gray-800">Create Curriculum Room</h3>
        <p class="text-gray-500 mt-1">Create a room for user types within a specific curriculum.</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        @if (!isSchoolAdmin)
        {
            <div>
                <label asp-for="SchoolId" class="block text-sm font-semibold text-gray-700 mb-2"></label>
                <select asp-for="SchoolId" asp-items="Model.Schools" class="w-full bg-white/80 border border-gray-300 text-gray-700 rounded-lg p-3 focus:ring-2 focus:ring-blue-500 focus:outline-none casc-school" required>
                    <option value="">-- Select School --</option>
                </select>
            </div>
        }
        else
        {
            <input type="hidden" asp-for="SchoolId" value="@schoolIdClaim.Value" />
        }

        <div>
            <label asp-for="CurriculumId" class="block text-sm font-semibold text-gray-700 mb-2"></label>
            <select asp-for="CurriculumId" class="w-full bg-white/80 border border-gray-300 text-gray-700 rounded-lg p-3 focus:ring-2 focus:ring-blue-500 focus:outline-none casc-curriculum" required disabled="@(!isSchoolAdmin)">
                <option value="">@isSchoolAdmin ? "-- Select a curriculum --" : "-- Select School First --"</option>
            </select>
        </div>
    </div>

    <div>
        <label asp-for="RoomName" class="block text-sm font-semibold text-gray-700 mb-2"></label>
        <input asp-for="RoomName" class="w-full bg-white/80 border border-gray-300 text-gray-700 rounded-lg p-3 focus:ring-2 focus:ring-blue-500 focus:outline-none" placeholder="e.g., British Curriculum Announcements" required />
    </div>

    @await Html.PartialAsync("_UserTypeChecklistPartial", Model)

    <button type="submit" class="w-full px-8 py-3 rounded-xl bg-blue-600 text-white hover:bg-blue-700 transition-all duration-300 font-semibold shadow-lg hover:shadow-blue-300 transform hover:scale-105">
        Create Curriculum Room
    </button>
</form>
